static Strings :: {
	replace(s, a, b) => n_s from {
		i in s do {
			i == a then {
				i = b;
			};
		};
		n_s = s;
	};

	split(s, a) => array from {
		a == null then a = ' ';
		array = [""];
		i in s do {
			i == a then {
				array push "";
			} else {
				end array push i;
			};
		};
	};

	join(array, a) => s from {
		a == null then a = "";
		s = array[1];
		i in [2 : len array] do {
			s = s .. a .. array[i];
		};
	};
};