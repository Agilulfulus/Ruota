load "System";

num1 := num os.prompt("Enter Value 1: ");
num2 := num os.prompt("Enter Value 2: ");
op := chr os.prompt("Enter Operand: ")[0];

os.printl(op switch {
'+' >> num1 + num2;
'-' >> num1 - num2;
'*' >> num1 * num2;
'/' >> num1 / num2;
'^' >> num1 ** num2;
'%' >> num1 % num2;
} >> "Invalid Operand");