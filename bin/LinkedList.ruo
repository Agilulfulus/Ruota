# LinkedList Example

dynamic LinkedList :: {
	head := null;

	# Adds element to list
	add(&e) => v from {
		head == null then {
			head = new Link(e);
		} else {
			curr := head;
			curr.next != null do { curr = curr.next };
			curr.next = new Link(e);
		};
		v .= e;
	};

	iterator() => { toArray() };

	toArray() => a from {
		a = [];
		curr := head;
		curr != null do {
			a push curr.value;
			curr = curr.next;
		};
	};

	# Retrieves mutable element from list
	index(pos) => e from {
		e = null;
		curr := head;
		i in [1 :> pos] do {curr = curr.next};
		e .= curr.value;
	};

	# Removes element from list
	remove(pos) => {
		curr := head;
		prev := null;
		i in [1 : pos] do {
			prev = curr;
			curr = curr.next;
		};
		prev == null then head = curr.next;
		prev.next = curr.next;
	};

	# Retrieves length of the list
	size() => s from {
		s = 0;
		curr := head;
		curr != null do {
			curr = curr.next;
			s = s + 1;
		};
	};

	# Returns string version of the list
	string() => s from {
		s = "[ ";
		curr := head;
		curr != null do {
			s = s .. curr.value .. " ";
			curr = curr.next;
		};
		s = s .. "]";
	};

	dynamic Link :: {
		value := null;
		next := null;

		init(&value) => {
			self.value .= value;
			next = null;
		};
	};
};